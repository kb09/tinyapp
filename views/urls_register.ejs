<body>
 <%- include('partials/_header') %>
  <main style="margin: 1em;">
    <h3>Create Account</h3>

    <form action="/register" method="POST">
      <div >
        
        <label for="register">Email address</label>
        <input class="form-control"  type="email" name="email" placeholder="Enter email" style="width: 300px; margin: 1em; margin-top: 0em;">
       
      
        <label for="register">Password</label>
        <input class="form-control"  type="password" name="password" placeholder="Password" style="width: 300px; margin: 1em;">
     
      </div>
          <br>
        <button type="submit" class="btn btn-primary">Register</button>
      
    </form>

  </main>
</body>
</html>